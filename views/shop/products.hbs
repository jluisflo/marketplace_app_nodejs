<div class="grid grid-cols-4">

    {{#each products}}

    <div class="m-left px-4 py-8">

        <div class="bg-white shadow-2xl">
            <div class="flex justify-center"><img src="{{ image }}" class="h-64" /></div>


            <div class="px-4 py-2 mt-2 bg-white">
                <h2 class="font-bold text-2xl text-gray-800">{{ name }}</h2>
                <h2 class="font-bold text-2xl text-blue-500">${{ price }}</h2>
                <p class="sm:text-sm text-xs text-gray-700 mr-1 my-3">
                    {{ description }}
                </p>

                <div class="grid grid-flow-col grid-cols-2 gap-2">
                    <div>
                        <form action="/cart/add-product" method="POST">
                            <input name="idProduct" class="hidden" value="{{ _id }}" />
                            <input name="quantity" class="hidden" value="1" />
                            <button type="submit"
                                class="bg-blue-500 duration-200 focus:outline-none focus:shadow-outline rounded-full h-12 hover:bg-blue-800 inline-flex items-center justify-center px-6 text-white tracking-wide transition w-full">
                                Add to Cart
                            </button>
                        </form>
                    </div>
                    <div>
                        <a href="/product/detail/{{ _id }}">
                            <button type="submit"
                                class="bg-gray-300 duration-200 focus:outline-none focus:shadow-outline rounded-full h-12 hover:bg-gray-400 inline-flex items-center justify-center px-6 tracking-wide transition w-full">
                                View Detail
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>

    {{/each}}

</div>