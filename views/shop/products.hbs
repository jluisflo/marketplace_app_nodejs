<h1 class="px-4 my-8 text-gray-800 dark:text-white text-2xl font-semibold md:text-3xl">
    Products availables
</h1>

<div class="grid grid-cols-4">
    {{#each products}}

    <div class="m-left px-4 py-8">
        <div class="bg-white shadow-2xl">
            <img
                src="https://images.unsplash.com/photo-1571171637578-41bc2dd41cd2?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80">

            <div class="px-4 py-2 mt-2 bg-white">
                <h2 class="font-bold text-2xl text-gray-800">{{ name }}</h2>
                <h2 class="font-bold text-2xl text-blue-500">${{ price }}</h2>
                <p class="sm:text-sm text-xs text-gray-700 mr-1 my-3">
                    {{ description }}
                </p>
            </div>
        </div>

    </div>

    {{/each}}

</div>