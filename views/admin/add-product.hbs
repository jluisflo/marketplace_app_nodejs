<div class="flex justify-center">


    <form action="/admin/add-product" method="POST" class="my-8">
        <div class="text-3xl text-gray-500 my-6"> Add Product</div>
        <label>Name</label>
        <input type="text" name="name" placeholder="enter name product"
            class="flex items-center h-12 px-4 w-80 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2" /><br /><br />

        <label>Description</label>
        <input type="text" name="description" placeholder="enter description product"
            class="flex items-center h-12 px-4 w-80 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2" /><br /><br />

        <label>Price</label>
        <input type="number" name="price" min="0.00" placeholder="enter price product"
            class="flex items-center h-12 px-4 w-80 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2" /><br /><br />

        <button type="submit" class="bg-gray-500 text-white py-4 px-8">Save</button>
    </form>
</div>